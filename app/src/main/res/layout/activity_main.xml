<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp">

    <!-- 标题 -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/app_name"
        android:textColor="@color/textPrimary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- 状态文本 -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="工作时间 - 专注！"
        android:textColor="@color/textSecondary"
        android:textSize="16sp" />

    <!-- 圆形进度条容器 -->
    <FrameLayout
        android:id="@+id/circleContainer"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true">

        <!-- 外圈 -->
        <View
            android:id="@+id/circleBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_background" />

        <!-- 进度圈 -->
        <View
            android:id="@+id/circleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_progress" />

        <!-- 计时器文本 -->
        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="25:00"
            android:textColor="@color/textPrimary"
            android:textSize="64sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- 控制按钮容器 -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/circleContainer"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- 开始按钮 -->
        <Button
            android:id="@+id/startButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_background"
            android:contentDescription="@string/start_timer"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/start"
            android:textColor="@color/buttonText"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="50dp" />

        <!-- 暂停按钮 -->
        <Button
            android:id="@+id/pauseButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_background"
            android:contentDescription="@string/pause_timer"
            android:enabled="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/pause"
            android:textColor="@color/buttonText"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="50dp" />

        <!-- 重置按钮 -->
        <Button
            android:id="@+id/resetButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_background"
            android:contentDescription="@string/reset_timer"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/reset"
            android:textColor="@color/buttonText"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="50dp" />
    </LinearLayout>

    <!-- 模式切换按钮 -->
    <Button
        android:id="@+id/modeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/mode_button_background"
        android:contentDescription="@string/switch_mode"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="@string/switch_mode"
        android:textColor="@color/buttonText"
        android:textSize="14sp"
        app:cornerRadius="24dp" />

</RelativeLayout>
